<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="tod.plugin"
   name="TOD Eclipse Plugin"
   version="0.2.1"
   provider-name="DCC - Universidad de Chile"
   class="tod.plugin.TODPlugin">

   <runtime>
      <library name="plugin.jar">
         <export name="*"/>
      </library>
      <library name="lib/log4j.jar">
         <export name="*"/>
      </library>
      <library name="lib/asm-2.1.jar">
         <export
               name="*">
         </export>
      </library>
      <library name="lib/asm-commons-2.1.jar">
         <export
               name="*">
         </export>
      </library>
      <library name="../zz.utils/bin">
         <export name="*"/>
      </library>
      <library name="../TOD/bin">
         <export name="*"/>
      </library>
      <library name="../zz.csg/bin">
         <export name="*"/>
      </library>
      <!--
      <library name="lib/tod-agent.jar">
         <export name="*"/>
      </library>
      <library name="lib/tod-debugger.jar">
         <export name="*"/>
      </library>
      <library name="lib/zz.csg.jar">
         <export name="*"/>
      </library>
      <library name="lib/zz.utils.jar">
         <export name="*"/>
      </library>
      -->
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="zz.eclipse.utils"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="TOD"
            id="tod.plugin">
      </category>
      <view
            category="tod.plugin"
            class="tod.plugin.views.TraceNavigatorView"
            id="tod.plugin.views.TraceNavigatorView"
            name="Trace Navigator"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchModes">
      <launchMode
            label="Debug with TOD"
            mode="tod"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchGroups">
      <launchGroup
            bannerImage="icons/t.png"
            id="tod.plugin.launchGroup.tod"
            image="icons/t.png"
            label="Debug with TOD"
            mode="tod"
            title="TOD launch group title"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="tod.plugin.actionSet"
            label="TOD Actions"
            visible="true">
         <action
               class="tod.plugin.actions.TODDebugToolbarAction"
               disabledIcon="icons/t.png"
               hoverIcon="icons/t.png"
               icon="icons/t.png"
               id="tod.plugin.debug"
               label="Debug with TOD"
               state="true"
               style="pulldown"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchDelegates">
      <launchDelegate
            delegate="tod.plugin.launch.TODLaunchDelegate"
            id="tod.plugin.launchDelegate.tod"
            modes="tod"
            type="org.eclipse.jdt.launching.localJavaApplication"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="tod.plugin.launch.TODLaunchTabGroup"
            id="tod.plugin.launchConfigurationTabGroup.localJavaApplication"
            type="org.eclipse.jdt.launching.localJavaApplication"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationComparators">
      <launchConfigurationComparator
            attribute="tod.plugin.launch.OPTIONS_MAP"
            class="zz.eclipse.utils.launcher.options.OptionsMapComparator"
            id="tod.plugin.launch.OPTIONS_MAP">
         
      </launchConfigurationComparator>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="tod.plugin.actions.ShowEventsForLine"
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor">
         <action
               class="tod.plugin.actions.ShowEventsForLineAction"
               id="tod.plugin.actions.ShowEventsForLineAction"
               label="Show events in TOD"
               />
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="tod.plugin.actions.CompilationUnitRulerPopupActions"
            targetID="#CompilationUnitRulerContext">
         <action
               class="tod.plugin.actions.ShowEventsForLineAction"
               id="tod.plugin.actions.ShowEventsForLineAction"
               label="Show events in TOD"
               menubarPath="debug"/>
      </viewerContribution>
   </extension>

</plugin>
