<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="tod.plugin"
   name="TOD Eclipse Plugin"
   version="1.0.0"
   provider-name="ITCC"
   class="tod.plugin.TODPlugin">

   <runtime>
      <library name="plugin.jar">
         <export name="*"/>
      </library>
      <library name="external:/home/gpothier/eclipse/workbench-3.1/TOD/bin/">
         <export name="*"/>
      </library>
      <library name="external:/home/gpothier/eclipse/workbench-3.1/zz.utils/bin/">
         <export name="*"/>
      </library>
      <library name="external:/home/gpothier/eclipse/workbench-3.1/zz.csg/bin/">
         <export name="*"/>
      </library>
      <library name="lib/log4j.jar">
         <export name="*"/>
      </library>
      <library name="lib/asm-2.1.jar">
         <export name="*"/>
      </library>
      <library name="lib/asm-commons-2.1.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="reflex.ide.eclipse.launcher"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="TOD"
            id="tod.plugin">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="tod.plugin"
            class="tod.plugin.views.SampleView"
            id="tod.plugin.views.SampleView">
      </view>
      <view
            category="tod.plugin"
            class="tod.plugin.views.TraceNavigatorView"
            id="tod.plugin.tracenavigatorview"
            name="Trace Navigator"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="tod.plugin.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchModes">
      <launchMode
            label="Debug with TOD"
            mode="tod"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchGroups">
      <launchGroup
            bannerImage="icons/t.png"
            id="tod.plugin.launchGroup.tod"
            image="icons/t.png"
            label="Debug with TOD"
            mode="tod"
            title="TOD launch group title"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="tod.plugin.actionSet"
            label="TOD Actions"
            visible="true">
         <action
               class="tod.plugin.actions.TODDebugToolbarAction"
               disabledIcon="icons/t.png"
               hoverIcon="icons/t.png"
               icon="icons/t.png"
               id="tod.plugin.debug"
               label="Debug with TOD"
               state="true"
               style="pulldown"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchDelegates">
      <launchDelegate
            delegate="tod.plugin.launch.TODLaunchDelegate"
            id="tod.plugin.launchDelegate.tod"
            modes="tod"
            type="org.eclipse.jdt.launching.localJavaApplication"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="tod.plugin.launch.TODLaunchTabGroup"
            id="tod.plugin.launchConfigurationTabGroup.localJavaApplication"
            type="org.eclipse.jdt.launching.localJavaApplication"/>
   </extension>

</plugin>
